
<table>
  <thead>
    <tr>  <% @events.each do |event| %>
      <th> <%= event.track %></th>
    </tr>
    <% end %>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td> <%= event.start.strftime('%m/%d/%Y-%H:%M')  %></td>
      <td> <%= event.finish.strftime('%m/%d/%Y-%H:%M')  %></td>
      <td> <%= event.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<div>

<h3>Import a CSV File</h3>
  <%= form_tag import_events_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
